{
	"description": "NYC Istanbul coverage settings for Mink",
	"nyc": {
		"check-coverage": true,
		"per-file": true,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80,
		"include": [
			"lib/**/*.js"
		],
		"exclude": [
			"src/**/*.test.js"
		],
		"reporter": [
			"lcov",
			"html",
			"text-summary"
		],
		"cache": true,
		"all": true,
		"report-dir": "./coverage"
	}
}